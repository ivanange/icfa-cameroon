{% import "macros/embeds.njk" as embeds %}

{% for article in articleList|reverse %}
	<div class="flex flex-col xl:flex-row py-5 xl:pt-0 xl:pb-3 px-2 relative mb-3">
		{{embeds.thumbnail(article.data.thumbnail, null, article.description)}}
		<div class="xl:pl-4 ">
			<h3 class="text-gray-900 font-medium text-xl pb-2 leading-snug capitalize">
				{{ article.data.title }}
				{% if article.data.type %}
					<span class="post-type px-1 bg-orange-300 hover:bg-orange-400 duration-300 rounded-md w-fit-content text-sm text-center">
						{{ article.data.type}}
					</a>
				{% endif %}
			</h3>
			<p class="text-gray-700 text-base xl:text-sm">
				{{article.data.description | default('', true) | truncate(1000)}}
			</p>
		</div>
		<a class="absolute bg-transparent top-0 bottom-0 left-0 right-0" href="{{article.data.url|default(article.url, true)}}"></a>
	</div>
{% endfor %}
