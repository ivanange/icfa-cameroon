<div class="tags flex flex-col px-4 pb-5 flex-shrink-0 w-64">
	<h3 class="w-full  font-semibold text-lg mb-3 pl-2 border-b pb-1">Tags</h3>
	{% for tag in collections.article|tags|sort %}
		{% set tagUrl %}/articles/tags/{{ tag }}/{% endset %}
		<a href="{{ tagUrl | url }}" class="post-tag inline-block px-3 bg-orange-300 hover:bg-orange-400 duration-300 rounded-md w-fit-content mb-3 text-sm text-center capitalize">{{ tag }}</a>
	{% endfor %}
</div>
