{% set featured = collections.featured | reverse %}
{% set article = featured | first %}

<h1 id="slides" class="py-3 text-4xl font-semibold text-gray-900 text-center mt-8 mb-2 sm:mt-20 uppercase anchor-fix">
	Articles</h1>
<div class="show-room pt-3 pb-10 w-full flex flex-wrap justify-evenly xl:px-2 text-white max-w-screen-2xl mx-auto">
	<div class="main-show w-full xl:w-2/3 px-3 xl:px-0 flex flex-wrap max-w-screen-lg flex-col justify-center">
		<div class="big-show w-full bg-gray-300 bg-center bg-cover bg-no-repeat h-0 pb-1/2 flex justify-center items-center text-3xl relative" style='background-image: url("/assets/img/thumbnails/{{article.data.thumbnail.src}}");'>
			<div class="absolute top-0 flex flex-col items-center justify-end w-full content h-full text-base px-6 pb-6" style="background-color: #00000066;">
				<h3 class="text-3xl font-light pb-2 text-center">{{ article.data.title  }}</h3>
				<a class="top-0 bottom-0 left-0 right-0 absolute" href="{{article.data.url|default(article.url, true)}}"></a>
			</div>
		</div>
		<div class="w-full py-5 flex flex-wrap justify-between">
			{% for i in range(1,3) %}
				<div class="w-1/2 min-w-3xs max-w-lg flex-grow py-2 px-2 sm:pl-0 xl:py-0">
					<div class="small-show w-full pb-1/2 bg-gray-300 bg-cover bg-center bg-no-repeat flex justify-center items-center text-white relative" style='background-image: url("/assets/img/thumbnails/{{featured[i].data.thumbnail.src}}");'>
						<div class="absolute bottom-0 flex flex-col items-center justify-end w-full content h-full overflow-hidden text-base px-1" style="background-color: #00000066;">
							<h3 class="text-2xl font-light pb-5 text-center leading-tight">{{featured[i].data.title  }}</h3>
							<a class="top-0 bottom-0 left-0 right-0 absolute" href="{{featured[i].data.url|default(featured[i].url, true)}}"></a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="aside w-full xl:w-1/3 px-2 xl:pr-0 flex flex-wrap justify-evenly xl:justify-between xl:flex-col xl:items-center pt-5 xl:pt-0">
		{% set articles = collections.article|reverse %}
		{% for article in articles.slice(0,4) %}
			<div class="flex flex-col xl:flex-row max-w-2xs xl:max-w-lg py-5 xl:pt-0 xl:pb-3 px-2 relative">
				<div class="">
					<div class=" bg-gray-300 bg-cover bg-center bg-no-repeat w-full xl:w-32 h-32 mb-3 flex-shrink-0" style='background-image: linear-gradient(90deg, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1)), url("/assets/img/thumbnails/{{article.data.thumbnail.src|default("logo-minimal.svg", true) }}");'></div>
				</div>
				<div class="xl:pl-4 ">
					<h3 class="text-gray-900 font-bold text-xl pb-2 leading-snug">
						{{article.data.title|truncate(50)}}
					</h3>
					<p class="text-gray-700 text-base xl:text-sm">
						{{article.data.description|truncate(100)}}
					</p>
				</div>
				<a class="absolute bg-transparent top-0 bottom-0 left-0 right-0" href="{{article.data.url|default(article.url, true)}}"></a>
			</div>
		{% endfor %}
	</div>
</div>
